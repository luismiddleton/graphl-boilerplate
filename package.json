{
  "name": "graphql-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist && echo 'Dist files have been cleaned' ",
    "generate:init": "graphql-codegen init",
    "compile:watch": "tsc --w",
    "compile:lint": "tslint --project tsconfig.json --config tslint.json './src/**/*.ts'",
    "compile": "tsc",
    "prettier": "prettier --write '**/*.ts'",
    "dev": "yarn build:dev && nodemon --exec babel-node -- dist/index.js",
    "build:dev": "NODE_ENV=development yarn clean && yarn compile:lint && yarn generate && yarn compile",
    "generate": "graphql-codegen --config codegen.yml --overwrite"
  },
