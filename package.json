    "@types/express-session": "^1.15.13",
    "@types/graphql": "^14.2.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.8",
    "@types/morgan": "^1.7.35",
    "@types/node": "^12.6.2",
    "@types/uuid": "^3.4.5",
    "graphql-tools": "^4.0.5",
