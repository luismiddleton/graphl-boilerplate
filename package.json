    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "graphql": "^14.4.2",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.6.4",
    "morgan": "^1.9.1",
    "subscriptions-transport-ws": "^0.9.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
